            </manifest>
            <fileset dir="${dir.workspace}/bin"/>
        	<zipfileset dir="../lib" includes="antlr-4.7.1-complete.jar"/>
        </jar>
        <delete dir="${dir.jarfile}/ISMSuite_lib"/>
        <mkdir dir="${dir.jarfile}/ISMSuite_lib"/>
