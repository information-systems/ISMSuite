        <copy file="${dir.workspace}/tool/accesscpn-2.2.0/org.cpntools.accesscpn.engine.highlevel_2.2.0.jar" todir="${dir.jarfile}/ISMSuite_lib"/>
        <copy file="${dir.workspace}/tool/accesscpn-2.2.0/org.cpntools.accesscpn.engine.proxy_2.2.0.jar" todir="${dir.jarfile}/ISMSuite_lib"/>
        <copy file="${dir.workspace}/tool/accesscpn-2.2.0/org.cpntools.accesscpn.model_2.2.0.jar" todir="${dir.jarfile}/ISMSuite_lib"/>
